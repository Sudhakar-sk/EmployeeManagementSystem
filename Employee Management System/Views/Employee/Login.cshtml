@model EmployeeManagement.Core.Models.AdminLogin

@{
    ViewBag.title = "Login";
}
<link href="~/css/Login.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
@if (TempData["LoginAlert"] != null)
{
    <script>
        alert("@Html.Raw(@TempData["LoginAlert"].ToString())");
    </script>

}

@if (TempData["LogoutAlert"] != null)
{
    <script>
        alert("@Html.Raw(@TempData["LogoutAlert"].ToString())");
    </script>

}
<div class="container">
    <div class="contain">
        <div class="main">
            <p class="sign" align="center">Log in</p>
            @using (Html.BeginForm("Login1", "Employee", FormMethod.Post, new { @id = "formDetails", @autocomplete = "off" }))
            {
                <div class="form1">
                    <div class="form-group">
                        @Html.EditorFor(Modal => Modal.UserName, new
                        {
                            HtmlAttributes = new
                            {
                                @name = "UserName",
                                @id = "user",
                                @type = "text",
                                @class = "un",
                                @placeholder = "Username",
                                @maxlength = "50",
                                @align = "center",
                                @*required = "true"*@
}
})

                    </div>


                    <div class="form-group">
                        @Html.EditorFor(Modal => Modal.PassWord, new
                        {
                            HtmlAttributes = new
                            {
                                @name = "Password",
                                @type = "password",
                                @class = "pass",
                                @placeholder = "Password",
                                @maxlength = "50",
                                @align = "center",

}
})

                    </div>


                    <button class="submit" type="submit" align="center" onclick="SubmitDetails()">Log in</button>

                </div>
            }
        </div>
    </div>
</div>
<script src="~/js/Login.js"></script>
