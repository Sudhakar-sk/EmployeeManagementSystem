
@model EmployeeManagement.Core.Models.FileDetails
<!--------------------------------------------------------------------------->
<script src="~/js/site.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

@using (Html.BeginForm("Upload", "Files", FormMethod.Post, new { @id = "Formdetails", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>FileUpload</label>
        <div>
            @Html.TextBoxFor(model => model.File, new { @class = "form-control col-md-3",@type = "file", @placeholder = "UploadFile" })
        </div>
    </div>
    <button type="Submit" id="uploadbtn" onclick="Upload()" class="btn btn-success">Upload</button>
}


<div>
    <a asp-action="viewFile">Back to List</a>
</div>

<script>
    $(document).ready(function () {
        $('input[type="file"]').on("change", function () {
            var ext = $('#File').val().split('.').pop().toLowerCase();
            if ($.inArray(ext, ['gif', 'png', 'jpg', 'jpeg', 'tiff']) == -1) {
                alert('invalid extension Only select jpeg,png,gif,tiff!');
                $("#uploadbtn").prop('disabled', true);
            }
        });
    });
</script>

<script>
    $(function () {
        $("#Formdetails").validate({
            rules:
            {
                File:
                {
                    required: true,
                }
            },
            message:
            {
                File:
                {
                    required: "Upload File Required"
                }
            }
        });
    });
    function SubmitDetails() {
        if ($("#Formdetails").valid()) {
            $("#Formdetails").submit();
        }
    }
</script>
